<persistence
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/persistence"
	version="1.0">

	<persistence-unit name="cedes160" transaction-type="RESOURCE_LOCAL">
		<jta-data-source>java:jboss/datasources/cedes160</jta-data-source>
		<class>Modelos.Evento</class>
		<class>Modelos.Talento</class>
		<class>Modelos.Inscricao</class>
		<class>Modelos.Ideia</class>
		<class>Modelos.Usuario</class>

		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.id.new_generator_mappings" value="false" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>

	</persistence-unit>
</persistence>
